<p id="notice"><%= notice %></p>
<%= form_tag(admin_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
  <%= submit_tag "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if request.fullpath == '/admin' %>
    <% end %>
    <% if request.fullpath.match('search') %>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.content %></td>
          <td><%= article.img %></td>
          <td><%= link_to 'Смотреть', article.id %></td>
          <td><%= link_to 'Редактировать', '/articles/'+article.id+'/edit' %></td>
          <td><%= link_to 'Удалить', article.id, method: :delete, data: { confirm: "Статья будет безвозвратно удалена.\nВы уверены?" } %></td>
        </tr>
      <% end %>

    <% else %>
        <% @articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.content %></td>
            <td><%= article.img %></td>
            <td><%= link_to 'Смотреть', article %></td>
            <td><%= link_to 'Редактировать', edit_article_path(article) %></td>
            <td><%= link_to 'Удалить', article, method: :delete, data: { confirm: "Статья будет безвозвратно удалена.\nВы уверены?" } %></td>
          </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая статья', new_article_path %> 