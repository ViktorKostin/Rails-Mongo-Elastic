<p id="notice"><%= notice %></p>
<%= form_tag(articles_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
  <%= submit_tag "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= article.img %></td>
        <td><%= link_to 'Читать', article %></td>
        <% if user_signed_in? and current_user.rights == 'admin' %>
          <td><%= link_to 'Редактировать', edit_article_path(article) %></td>
          <td><%= link_to 'Удалить', article, method: :delete, :remote => true, :class => 'delete_entry' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? and current_user.rights == 'admin' %>
  <%= link_to 'Новая статья', new_article_path %> 
<% end %>