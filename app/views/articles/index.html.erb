<p id="notice"><%= notice %></p>
<%= form_tag(articles_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
  <%= submit_tag "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article %></td>
        <td><%= article.content %></td>
        <td><%= article.img %></td>
        <td><%#= link_to 'Смотреть', article %></td>
        <td><%#= link_to 'Редактировать', edit_article_path(article) %></td>
        <td><%#= link_to 'Удалить', article, method: :delete, data: { confirm: "Статья будет безвозвратно удалена.\nВы уверены?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая статья', new_article_path %> 